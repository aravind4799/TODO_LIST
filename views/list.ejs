<%- include("header") -%>

  <div class="box" id="heading">
    <h1> <%= date %> </h1>
    <h1> <%= listTitle %> </h1>
  </div>

  <div class="box">

    <% for (let i=0; i<newListItems.length; i++) { %>
      <form class="" action="/delete" method="post">
      <div class="item">
        <input type="checkbox" onChange="this.form.submit()" name="checkbox" value="<%= newListItems[i]._id %>">
        <p> <%=  newListItems[i].name  %></p>
      </div>
      <!-- since we need to get the list from which we need to delete the item that has been checked off -->
      <input type="hidden" name="list" value="<%= listTitle %>">
    </form>
      <% } %>

      <form class="item" action="/" method="post">
        <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
        <button type="submit" name="list" value = "<%= listTitle %>">+</button>
      </form>
  </div>

<%- include("footer") -%>
